<style type="text/css">
  table, th, td { border: 1px solid #000000; padding: 10px; }
</style>

<div style="background-color: #ff0000; height: 50px;">
  {{>adminNavigation}}
</div>

<div id="mainContent">
  <h1>Admin Add/Drop Languages to/from Courses</h1>
  <form>
      <label for="course">Select Course:</label>
      <select name="course">
        <option value="1">Intro to Java</option>
        <option value="2">C++</option>
        <option value="3">Advanced SQL</option>
        <option value="4">Python Boot Camp</option>
      </select>
    </form>


    <br /><br />

    <table>
        <thead>
            <th>Language</th>
            <th></th>
            <th colspan="2"></th>
        </thead>
        <tbody>
        <tr>
            <td>English</td>
            <td>USA</td>
            <td><button id="drop1">Drop from Course</button></td>
        </tr>
        <tr>
            <td>Spanish</td>
            <td>Spain</td>
            <td><button id="drop1">Drop from Course</button></td>
        </tr>
        </tbody>
    </table>
    <h2>Add New Language</h2>
    <form>
      <label for="language">Enter language:</label>
      <input type="text" name="languageName" placeholder="language name">
      <input type="text" name="languageCountry" placeholder="language country">
      <input type="submit">
    </form>
</div>