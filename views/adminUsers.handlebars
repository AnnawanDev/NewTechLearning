<style type="text/css">
  table, th, td { border: 1px solid #000000; padding: 10px; }
</style>

<div style="background-color: #ff0000; height: 50px;">
  {{>adminNavigation}}
</div>

<div id="mainContent">
  {{{ addEditUserFeedback }}}
  <h1>Admin Users</h1>
  <h2>Add User</h2>
  <form method="post" action="/Admin/Users/">
    <input type="hidden" id="addUserForm" name="addUserForm" value="yes" />
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Confirm Password</th>
      <th>User Type</th>
    </thead>
    <tbody>
      <tr>
        <td><input type="text" id="addFirstName" name="addFirstName"  /></td>
        <td><input type="text" id="addLastName" name="addLastName" /></td>
        <td><input type="text" id="addUserName" name="addUserName" /></td>
        <td><input type="email" id="addEmail" name="addEmail" /></td>
        <td><input type="password" id="addPassword1" name="addPassword1" /></td>
        <td><input type="password" id="addPassword2" name="addPassword2" /></td>
        <td>
          <select name="addUserType" id="addUserType">
            <option value="Student">Student</option>
            <option value="Instructor">Instructor</option>
            <option value="Admin">Admin</option>
          </select>
        </td>
      </tr>
    </tbody>
  </table>
  <button id="addUserButton" style="margin-top: 20px">Add User</button>
  </form>

  <br /><br />

  <h2>Edit/Delete Users</h2>
  <div id="editDeleteFeedbackResponse"></div>
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Name</th>
      <th>Email</th>
      <th>New password<br />(if needed)</th>
      <th>Re-enter<br />new password</th>
      <th>User Type</th>
      <th colspan="2"></th>
    </thead>
      <tbody id="tbodyToEditDelete">
    </tbody>
  </table>
</div>

<script>
  requirejs(["/js/config.js"], function (config){
    requirejs(["/js/adminUsers.js"]);
  });
</script>
