<style type="text/css">
  table, th, td { border: 1px solid #000000; padding: 10px; }
</style>

<div style="background-color: #ff0000; height: 50px;">
  {{>adminNavigation}}
</div>

<div id="mainContent">
  <form method="post" action="/Admin/Courses/Edit/">
  <input type="hidden" id="courseId" name="courseId" value="{{courseId}}" />
  <h1>{{title}}</h1>

  <a href="/Admin/Courses/">Back to Courses</a><br /><br />

  <b>Course Name</b><br />
  <input type="input" id="courseName" name="courseName" value="{{courseName}}"></input>
  <br /><br />

  <b>Instructor</b><br />
  <input type="input" id="instructor" name="instructor" value="{{instructor}}"></input>

  <br /><br />
  <b>Course Description</b><br />
  <textarea id="courseDescription" name="courseDescription" rows="20" cols="100">{{courseDescription}}</textarea>

  <br /><br />
  <b>Is Live?</b><br />
  <input type="checkbox" id="isLive" name="isLive" {{#if isLive}}checked {{/if}} />

  <br /><br />
  <b>Date went live</b><br />
  <input type="input" id="dateWentLive" name="dateWentLive" value="{{dateWentLive}}" /><br /> <!-- TODO: Change to just date -->

  <br /><br />
  <b>Category</b><br />
  <input type="hidden" id="selectedItem" name="selectedItem" value="{{categoryFk}}" />
  <select id="selectCategory" name="selectCategory">
    <option value="0">None</option>
    {{#each categories}}
      <option value="{{categoryId}}">{{categoryName}}</option>
    {{/each}}
  </select>

  <br /><br />
  <b>Language(s)</b><br />
  <input type="hidden" id="languageSelectedItem" name="languageSelectedItem" value="{{languageFk}}" />
  <select id="selectLanguage" name="selectLanguage" multiple="multiple">
    <option value="0">None</option>
    {{#each languages}}
      <option value="{{languageId}}">{{languageName}}</option>
    {{/each}}
  </select>

  <br /><br />
  <button id="submit" name="submit">Submit Changes</button>
</div>

<script>
  requirejs(["/js/config.js"], function (config){
    requirejs(["/js/adminCourseEdit.js"]);
  });
</script>
